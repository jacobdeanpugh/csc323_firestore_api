rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null || true;
    }

    // Polls collection
    match /polls/{pollId} {
      allow read: if true;
      allow create: if request.auth != null || true;
      allow update, delete: if request.auth != null || true;
    }

    // Votes collection
    match /votes/{voteId} {
      allow read: if request.auth != null || true;
      allow create: if request.auth != null || true;
      allow update, delete: if request.auth != null || true;
    }
  }
}
